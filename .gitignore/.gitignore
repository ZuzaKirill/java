/*
Task_1:
	Составить программу для вычисления значений функции F(x) на отрезке [а, b] с шагом h. Размеры отрезка и параметры задаются в качестве параметров в консоли.
	Результат представить в виде таблицы, первый столбец которой – значения аргумента, второй - соответствующие значения функции:
	
	F(x) = tg(2x) - 3
 */

package Task_1;
import java.io.*;

public class task_1 {
    static int a, b, h;
    BufferedReader in;

    private task_1() throws IOException {
        in = new BufferedReader(new InputStreamReader(System.in));
        System.out.println("Введите переменную a:");
        a = Integer.parseInt(in.readLine());
        System.out.println("Введите переменную (переменная должна быть больше чем переменная a!) b:");
        b = Integer.parseInt(in.readLine());
        System.out.println("Введите переменную (переменная должна быть меньше чем разность переменных b и a!) h:");
        h = Integer.parseInt(in.readLine());

        if (a > b) {
            throw new IllegalArgumentException("Ошибка! a должна быть меньше чем b");
        }
        if (h > b - a) {
            throw new IllegalArgumentException("Ошибка! h должна быть меньше чем результат b - a");
        }
    }

    private String func() {
        StringBuilder sb = new StringBuilder();
        sb.append("Аргументы:\n");
        sb.append("Значение функции:\n");

        for (int x = a; x < b; x+=h) {
            double res = Math.tan(2 * x) - 3;
            sb.append(x);
            sb.append("        ");
            sb.append(res);
            sb.append("\n");
        }

        return String.valueOf(sb);
    }

    public static void main(String[] args) throws IOException {
        task_1 function = new task_1();
        System.out.println(function.func());
    }


}
